.page-header
  %h1= t ".title"
.sign-in-form
  = semantic_form_for resource, as: resource_name, url: session_path(resource_name) do |f|
    = f.inputs do
      = f.input :email
      = f.input :password
      - if devise_mapping.rememberable?
        = f.input :remember_me, as: :boolean
    = f.actions do
      = f.action :submit, :label => t(".sign_in")
