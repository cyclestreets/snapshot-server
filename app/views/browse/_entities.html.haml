%table.condensed-table
  %thead
    %tr
      %th= t ".id"
      %th= t ".status"
      %th= t ".tags"
  %tbody
    - entities.each do |entity|
      %tr
        %td= entity.id
        %td
          - if entity.status? && (entity.status != default)
            %span{:class => [:label, :success]}
              = entity.status
          - else
            %span{:class => [:label]}
              = default
        %td= entity.tags_string
